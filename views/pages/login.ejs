<div class="form">
    <h1>Login</h1>
    <form action="/users" method="get">
        <% if(locals.alert){ %>
            <p class="alert">
                <%= alert %>
            </p>
            <% } %>
                <input type="text" placeholder="Username" name="username" />
                <input type="text" placeholder="Password" name="password" />
                <button type="submit">Submit</button>
    </form>
    <a href="/register">Register</a>
</div>